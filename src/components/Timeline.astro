---
const { experience } = Astro.props;
import type { Experience } from "../types";
import TimelineItem from "./TimelineItem.astro";
---

<section class="timeline__container">
    <div class="timeline__vertical__line"></div>
    {
        experience.map((experience: Experience) => (
            <TimelineItem experience={experience} />
        ))
    }
</section>

<style>
    .timeline__container {
        padding: 1rem 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .timeline__vertical__line {
        position: absolute;
        margin: 1rem 0 0 1.9rem;
        /*width: 3px;*/
        height: -webkit-fill-available;
        background-color: #aae;

        @media (width <= 512px) {
            display: none;
        }
    }
</style>
