---
import TimelineEducation from "./TimelineEducation.astro";
import { getCollection } from "astro:content";
const education = (await getCollection("education")).sort(
    (a, b) => new Date(b.data.endDate) - new Date(a.data.endDate),
);
---

<section class="education__container" id="education">
    <h1>Education</h1>
    <p>Here I show the education and courses I've done.</p>
    <TimelineEducation items={education} />
</section>

<style>
    .education__container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
    }
</style>

<script>
    import { gsap } from "gsap";

    gsap.from(".education__container", {
        translateX: -900,
        duration: 1,
        opacity: 0,
        ease: "power1.inOut",
    });

    gsap.to(".education__container", {
        duration: 1,
        translateX: 0,
        opacity: 1,
        ease: "power1.inOut",
    });
</script>
