---
import SVGComponent from "./SVGComponent.astro";

const { item } = Astro.props;
---
<div class="timeline__item__container">
    <div class="timeline__item__logo">
        {item.logo ? <SVGComponent width={32} height={32} name={item.logo} type="logo" /> : <SVGComponent width={32} height={32} name="company" type="logo" />}
    </div>
    <div class="timeline__item__content">
        <h3>{item.role}</h3>
        <div class="timeline__item__company">
            <h5 class="timeline__item__company__name">{item.company} - {item.location}</h5>
            <p class="timeline__item__date">{new Date(item.startDate).toLocaleDateString("en-US", {month: "long", year: "numeric"})} - {item.endDate === "Current" ? "Current" : new Date(item.endDate).toLocaleDateString("en-US", {month: "long", year: "numeric"})}</p>
        </div>
        <p class="timeline__item__description">{item.description}</p>
    </div>
</div>

<style>
    .timeline__item__container {
        display: inline-flex;
        gap: 1.5rem;
        padding: 1rem 0;
        width: 100%;

        &::after {
            content: "";
            position: absolute;
            top: 10%;
            bottom: 18%;
            left: 1.9rem;
            width: 3px;
            height: -webkit-fill-available;
            background-color: #aae;
            z-index: -1;

            @media (width <= 768px) {
                top: 16%;
            }

            @media (width <= 768px) {
                content: none;
            }
        }

        @media (width <= 768px) {
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }

    .timeline__item__logo {
        width: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
        height: fit-content;
        background-color: #aae;
        border-radius: 100%;
        padding: 1rem;
        z-index: 1;
    }

    .timeline__item__content {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-start;
        flex: auto;

        @media (width <= 768px) {
            align-items: center;
        }
    }

    .timeline__item__company__name {
        font-weight: 600;
    }

    .timeline__item__company {
        display: flex;
        gap: 2rem;
        align-items: center;
        width: 100%;

        @media (width <= 768px) {
            flex-direction: column;
            gap: 0.5rem;
            align-items: center;
            padding: 1rem 0;
        }
    }

    .timeline__item__date {
        margin: 0;
        background-color: #aae;
        padding: 0.25rem 0.5rem;
        color: #112;
        border-radius: 1rem;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .timeline__item__description {
        padding: 1rem 0;
        font-size: 1.1rem;
    }
}
</style>
