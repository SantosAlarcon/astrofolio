---
import ThemeSwitcher from "./ThemeSwitcher.astro";
const { data } = Astro.props;
import menu from "../constants/menu.json";
---

<header class="header__container preload">
    <div class="header__left">
        <h2>{data.name}</h2>
        <button class="mobile__menu__button" aria-label="Toggle mobile menu">
            <i class="mobile__menu__hamburger"></i>
        </button>
    </div>
    <div class="header__right">
        <nav class="header__nav">
            {menu.map((item) => (
                <a
                    class="header__nav__link"
                    aria-label={item.name}
                    href={item.url}
                >
                    {item.name}
                </a>
            ))}
            <ThemeSwitcher id="theme__toggle" />
        </nav>
    </div>
</header>

<style>
    .preload * {
        transition: none !important;
        animation-duration: 0s !important;
    }

    .header__container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 3rem;

        @media (width <= 512px) {
            flex-direction: column;
            gap: 1rem;
            align-items: center;

            &:has(.preload) {
                    block-size: 0;
            }
        }
    }

    .header__left {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    .header__right {
        display: flex;
        transition-property: block-size;
        transition-behavior: allow-discrete;
        transform-origin: top;
        transition-duration: 0.25s;

        @media (width <= 512px) {
            width: 100%;
            overflow-y: hidden;


            &[hidden] {
                @media (width <= 512px) {
                    block-size: 0;
                }
            }

            &:not([hidden]) {
                block-size: 320px;
            }
        }
    }

    .header__nav {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        align-items: center;
        width: 100%;

        @media (width <= 512px) {
            flex-direction: column;
        }
    }

    .header__nav__link {
        color: inherit;
        text-decoration: none;
    }

    .mobile__menu__button {
        display: none;
        width: 3rem;
        height: 3rem;
        border-radius: 100%;
        outline: none;
        border: none;
        background: none;
        box-shadow: 0 0 0.5rem var(--fg-color);

        @media (width <= 512px) {
            display: block;
        }
    }

    .mobile__menu__hamburger {
        width: 80%;
        height: 0.2rem;
        display: grid;
        margin: 0 auto;
        background: var(--fg-color);
        transition: all 0.3s ease-in-out;

        &::before {
            content: "";
            width: 100%;
            height: 0.2rem;
            background: var(--fg-color);
            margin-top: -0.5rem;
            transition: all 0.3s ease-in-out;
        }

        &::after {
            content: "";
            width: 100%;
            height: 0.2rem;
            background: var(--fg-color);
            margin-top: 0.5rem;
            transition: all 0.3s ease-in-out;
        }

        &:is(.opened) {
            transform: rotate(136deg);

            &::before {
                transform: rotate(-90deg);
                margin-top: 0;
            }

            &::after {
                transform: rotate(-90deg);
                opacity: 0;
                margin-top: -0.25rem;
            }
        }
    }
</style>
