---
import ThemeSwitcher from "./ThemeSwitcher.astro";

const { data } = Astro.props;
---

<header class="header__container">
    <div class="header__left">
        <h2>{data.name}</h2>
    </div>
    <div class="header__right">
        <nav class="header__nav">
            <a class="header__nav__link" aria-label="Home" href="#">Home</a>
            <a class="header__nav__link" aria-label="About" href="#about"
                >About</a
            >
            <a
                class="header__nav__link"
                aria-label="Experience"
                href="#experience">Experience</a
            >
            <a class="header__nav__link" aria-label="Works" href="#works"
                >Works</a
            >
            <a class="header__nav__link" aria-label="Contact" href="#contact"
                >Contact</a
            >
            <ThemeSwitcher />
        </nav>
    </div>
</header>

<style>
    .header__container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 3rem;

        @media (width <= 512px) {
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }

    .header__nav {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        align-items: center;
    }

    .header__nav__link {
        color: inherit;
        text-decoration: none;
    }
</style>
