---
import ThemeSwitcher from "./ThemeSwitcher.astro";
const { data } = Astro.props;
---

<header class="header__container">
    <div class="header__left">
        <h2>{data.name}</h2>
        <button class="mobile__menu__button">
            <i class="mobile__menu__hamburger"></i>
        </button>
    </div>
    <div class="header__right">
        <nav class="header__nav">
            <a class="header__nav__link" aria-label="Home" href="#">Home</a>
            <a class="header__nav__link" aria-label="About" href="#about"
                >About</a
            >
            <a
                class="header__nav__link"
                aria-label="Experience"
                href="#experience">Experience</a
            >
            <a class="header__nav__link" aria-label="Works" href="#works"
                >Works</a
            >
            <a class="header__nav__link" aria-label="Contact" href="#contact"
                >Contact</a
            >
            <ThemeSwitcher />
        </nav>
    </div>
</header>

<style>
    .header__container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 3rem;

        @media (width <= 512px) {
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }

    .header__left {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    .header__right {
        display: flex;
        transition-property: block-size;
        transition: all 0.25s ease-in-out allow-discrete !important;
        transform-origin: top;

        @media (width <= 512px) {
            width: 100%;
            overflow-y: hidden;

            &[hidden] {
                @media (width <= 512px) {
                    block-size: 0;
                }
            }

            block-size: 320px;
        }
    }

    .header__nav {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        align-items: center;
        width: 100%;

        @media (width <= 512px) {
            flex-direction: column;
        }
    }

    .header__nav__link {
        color: inherit;
        text-decoration: none;
    }

    .mobile__menu__button {
        display: none;
        width: 3rem;
        height: 3rem;
        border-radius: 100%;
        outline: none;
        border: none;
        background: none;
        box-shadow: 0 0 0.5rem var(--fg-color);

        @media (width <= 512px) {
            display: block;
        }
    }

    .mobile__menu__hamburger {
        width: 80%;
        height: 0.2rem;
        display: grid;
        margin: 0 auto;
        background: var(--fg-color);
        transition: all 0.3s ease-in-out;

        &::before {
            content: "";
            width: 100%;
            height: 0.2rem;
            background: var(--fg-color);
            margin-top: -0.5rem;
            transition: all 0.3s ease-in-out;
        }

        &::after {
            content: "";
            width: 100%;
            height: 0.2rem;
            background: var(--fg-color);
            margin-top: 0.5rem;
            transition: all 0.3s ease-in-out;
        }

        &:is(.opened) {
            transform: rotate(136deg);

            &::before {
                transform: rotate(-90deg);
                margin-top: 0;
            }

            &::after {
                transform: rotate(-90deg);
                opacity: 0;
                margin-top: -0.25rem;
            }
        }
    }
</style>
<script>
    const rightHeader = document.querySelector(".header__right");
    const menu = document.querySelector(".mobile__menu__button");
    const hamburger = document.querySelector(".mobile__menu__hamburger");
    rightHeader.hidden = true;

    menu.addEventListener("click", () => {
        menu.classList.toggle("open");
        hamburger.classList.toggle("opened");

        rightHeader.hidden = !rightHeader.hidden;
    });
</script>
